<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox fx:id="roomsContent" spacing="10" stylesheets="@../styles/room.css"
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="asm.org.MusicStudio.controllers.RoomViewController">
    
    <HBox styleClass="room-header">
        <Text text="Room Booking"/>
    </HBox>
    
    <HBox styleClass="room-action-bar">
        <DatePicker fx:id="roomDatePicker" styleClass="room-datepicker"/>
        <Button text="Book Room" 
                onAction="#showRoomBookingDialog"
                styleClass="room-button"/>
        <Button text="Booking History" 
                onAction="#showBookingHistory"
                styleClass="room-button"/>
    </HBox>
    
    <TableView fx:id="roomsTable" VBox.vgrow="ALWAYS" styleClass="room-table">
        <columns>
            <TableColumn fx:id="roomNumberColumn" text="Room" prefWidth="150"/>
            <TableColumn fx:id="capacityColumn" text="Capacity" prefWidth="100"/>
            <TableColumn fx:id="availabilityColumn" text="Availability" prefWidth="150"/>
        </columns>
    </TableView>
</VBox> 